pipeline {
    agent any   // Run on any available Jenkins agent

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Scan for Secrets') {
            steps {
                script {
                    echo "üîç Running Gitleaks to scan for secrets..."

                    // Using Docker image for Gitleaks
                    def status = sh(
                        script: """
                            docker run --rm -v \$(pwd):/code zricethezav/gitleaks:8.28.0 \
                            detect --source /code --exit-code 1 --report-format json --report-path gitleaks-report.json
                        """,
                        returnStatus: true
                    )

                    if (status != 0) {
                        error("‚ùå Gitleaks found exposed secrets! Failing the build.")
                    } else {
                        echo "‚úÖ No secrets found."
                    }
                }
            }
        }
    }

    post {
        always {
            // Archive the Gitleaks report for auditing, even if the build fails
            archiveArtifacts artifacts: 'gitleaks-report.json', onlyIfSuccessful: false
        }
        success {
            echo "üéâ Pipeline completed successfully!"
        }
        failure {
            echo "‚ö†Ô∏è Pipeline failed due to exposed secrets."
        }
    }
}
